<h3>Confirmation</h3>
<wrapper>
<%= form_with(model: @picture, local: true) do |form| %>
  <%= form.hidden_field :title, class: %q(form-control) %>
  <%= form.hidden_field :content %>
  <p>Title:<%= @picture.title %></p>
  <p>Content:<%= @picture.content %></p>
  <p>Image:</p>
  <p><%= image_tag(@picture.image.url(:gallery)) if @picture.image && @picture.image.url %></p>
  <%= form.hidden_field :image_cache %>
  <div class="form-group">
    <%= form.submit %q(Post!), class: %q(confirm-btn btn-primary new-post) %>
  </div>
  <div class="form-group">
    <%= form.submit %q(Return), name: %q(back), class: %q(confirm-btn btn-info return-new) %>
  </div>
<% end %>
</wrapper>
