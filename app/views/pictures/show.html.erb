<h1>記事詳細画面</h1>

<p>タイトル:<%= @picture.title %></p>
<p>内容:<%= @picture.content %></p>
<p>
  <strong>Image:</strong>
  <% if @picture.image.present? %>
    <%= image_tag @picture.image.url(:gallery) %>
  <% end %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to %q(お気に入り解除する), favorite_path(id: @favorite.id), method: :delete, class: %q(btn btn-danger) %>
  <% else %>
    <%= link_to %q(お気に入りする), favorites_path(picture_id: @picture.id), method: :post, class: %q(btn btn-primary) %>
  <% end %>
<% end %>

<% if @picture.user.id == current_user.id %>
  <%= link_to "編集する", edit_picture_path(@picture.id) %>
<% end %>

<%= link_to "戻る", pictures_path %>
