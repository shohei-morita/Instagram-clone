<!DOCTYPE html>
<html>
  <head>
    <title>Extagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: %Q(key)) %>
    <% end %>
    <% if logged_in? %>
      <%= link_to %q(Extagram!), pictures_path, class: %q(btn btn-primary) %>
      <%= link_to %q(Home), user_path(current_user.id), class: %q(btn btn-primary) %>
      <%= link_to %q(My Favorites), favorites_path, class: %q(btn btn-info) %>
      <%= link_to %q(Logout), session_path(current_user.id), method: :delete, class: %q(btn btn-danger) %>
    <% else %>
      <%= link_to %q(Extagram!), pictures_path, class: %q(btn btn-primary) %>
      <%= link_to %q(SignUp), new_user_path %>
      <%= link_to %q(Login), new_session_path %>
    <% end %>
    <div class="container">
    <%= yield %>
    </div>
  </body>

</html>
