<div class="wrapper">
<h1>Sign up</h1>
<% if @user.errors.any? %>
  <div>
    <h2><%= pluralize(@user.errors.count, %q(error)) %> prohibited this <%= @user.name %> form being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |form| %>
<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: %q(form-control)  %>
</div>
<div class="form-group">
  <%= form.label :email %>
  <%= form.email_field :email, class: %q(form-control)  %>
</div>
<div class="form-group">
  <%= form.label :password %>
  <%= form.password_field :password, class: %q(form-control)  %>
</div>
<div class="form-group">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password, class: %q(form-control)  %>
</div>
<div class="form-group">
  <%= form.submit %q(Sign up), class: %q(btn btn-primary) %>
</div>
<% end %>
</div>
