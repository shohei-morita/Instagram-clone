<h1>ユーザー登録</h1>
<% if @user.errors.any? %>
  <div>
    <h2><%= pluralize(@user.errors.count, %q(error)) %> prohibited this <%= @user.name %> form being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |form| %>
<div>
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>
<div>
  <%= form.label :email %>
  <%= form.email_field :email %>
</div>
<div>
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>
<div>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password %>
</div>
<div>
  <%= form.submit %q(登録する) %>
</div>
<% end %>
